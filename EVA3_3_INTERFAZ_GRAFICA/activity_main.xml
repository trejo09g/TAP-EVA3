<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CF1A1A"
    android:backgroundTint="#EDE6E6"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAF2F2"
        android:backgroundTint="#F4EDED"
        android:foregroundTint="#020202"
        android:foregroundTintMode="multiply"
        android:text="Formulario de Captura:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNom"
            android:layout_width="275dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#000000"
            android:text="Nombre:" />

        <EditText
            android:id="@+id/editTextNom"
            android:layout_width="333dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="text"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewApe"
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#000000"
            android:text="Apellido" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estado Civil:" />

    <Button
        android:id="@+id/btnNomCom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoText="true"
        android:background="#C81F1F"
        android:text="Nombre Completo"
        app:strokeColor="#9A2020" />

    <RadioButton
        android:id="@+id/RadioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soltero" />

    <RadioButton
        android:id="@+id/rd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Casado" />

    <RadioButton
        android:id="@+id/rd3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viudo" />

    <RadioButton
        android:id="@+id/rd4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unio Libre" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

</LinearLayout>